@{
    ViewData["Title"] = "Home Page";
}

<form id="sehirForm" class="col-mb-5">
    <div class="row">
        <div class="col-lg-6">
            <label for="inputCityName">Şehir Adı</label>
            <input required type="text" class="form-control" name="isim" id="inputCityName" />
        </div>
        <div class="col-lg-6">
            <label for="inputFamous">Özelliği</label>
            <input required type="text" class="form-control" name="meshur" id="inputFamous" />
        </div>
        <div class="col-lg-6">
            <label for="inputCategory">Kategori</label>
            <select required class="form-select" name="tip" id="inputCategory">
                <option disabled selected value="">Seçiniz</option>
                <option value="yemek">Yemeği</option>
                <option value="tarih">Tarihi Yer</option>
            </select>
        </div>
        <div class="col-lg-6">
            <label  for="inputPlateNumber">Plaka</label>
            <input required type="number" class="form-control" name="plaka" id="inputPlateNumber" />
        </div>
       
        <div class="text-end" style="padding-top:20px;">
            <button class="btn btn-primary">Ekle</button>
        </div>
    </div>
</form>

<div class="row" style="padding-top:40px;">
    <div class="col-lg-12">
        <h5>Tüm Şehirler</h5>
        <table class="table">
            <thead style="font-weight:bold">
