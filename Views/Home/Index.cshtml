            <thead style="font-weight:bold">
                <tr>
                    <td>İsim</td>
                    <td>Yemek</td>
                </tr>
            </thead>
            <tbody id="citiFood">
                <tr></tr>
            </tbody>
        </table>
    </div>
    <div class="col-lg-6" style="padding-top:20px;">
        <h5>Tarihi ile meşhur olanlar</h5>
        <table class="table">
            <thead style="font-weight:bold">
                <tr>
                    <td>İsim</td>
                    <td>Tarihi Yeri</td>
                </tr>
            </thead>
            <tbody id="citiHistory">
                <tr></tr>
            </tbody>
        </table>
    </div>
    <div class="col-lg-6" style="padding-top:20px;">
        <h5>Plaka Tek Numara Olanlar</h5>
